	<modelVersion>4.0.0</modelVersion>
	<groupId>org.baali</groupId>
	<artifactId>springmvc.test</artifactId>
	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>springmvc.test Maven Webapp</name>
